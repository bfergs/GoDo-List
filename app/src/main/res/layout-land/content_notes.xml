<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Notes.NotesActivity"
    tools:showIn="@layout/activity_notes">


    <Button
    android:layout_width="@dimen/paint_button_height"
    android:layout_height="@dimen/paint_button_width"
    android:background="@drawable/paint_buttonshape_red"
    android:id="@+id/red_paint_button"
        android:visibility="invisible"
        android:enabled="false"
        android:layout_above="@+id/blue_paint_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/paint_button_vertical_margin" />

    <Button
        android:layout_width="@dimen/paint_button_height"
        android:layout_height="@dimen/paint_button_width"
        android:background="@drawable/paint_buttonshape_purple"
        android:id="@+id/purple_paint_button"
        android:layout_alignTop="@+id/red_paint_button"
        android:layout_toRightOf="@+id/red_paint_button"
        android:layout_toEndOf="@+id/red_paint_button"
        android:layout_marginLeft="@dimen/paint_button_horizontal_margin"
        android:layout_marginStart="@dimen/paint_button_horizontal_margin"
        android:visibility="invisible"
        android:enabled="false" />

    <Button
        android:layout_width="@dimen/paint_button_height"
        android:layout_height="@dimen/paint_button_width"
        android:background="@drawable/paint_buttonshape_blue"
        android:id="@+id/blue_paint_button"
        android:visibility="invisible"
        android:enabled="false"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/purple_paint_button"
        android:layout_toStartOf="@+id/purple_paint_button" />

    <Button
        android:layout_width="@dimen/paint_button_height"
        android:layout_height="@dimen/paint_button_width"
        android:background="@drawable/paint_buttonshape_green"
        android:id="@+id/green_paint_button"
        android:layout_alignTop="@+id/blue_paint_button"
        android:layout_alignLeft="@+id/purple_paint_button"
        android:layout_alignStart="@+id/purple_paint_button"
        android:visibility="invisible"
        android:enabled="false" />

    <Button
        android:layout_width="@dimen/paint_button_height"
        android:layout_height="@dimen/paint_button_width"
        android:background="@drawable/paint_buttonshape_yellow"
        android:id="@+id/yellow_paint_button"
        android:visibility="invisible"
        android:enabled="false"
        android:layout_alignTop="@+id/purple_paint_button"
        android:layout_toRightOf="@+id/purple_paint_button"
        android:layout_toEndOf="@+id/purple_paint_button"
        android:layout_marginLeft="@dimen/paint_button_horizontal_margin"
        android:layout_marginStart="@dimen/paint_button_horizontal_margin" />

    <Button
        android:layout_width="@dimen/paint_button_height"
        android:layout_height="@dimen/paint_button_width"
        android:background="@drawable/paint_buttonshape_orange"
        android:id="@+id/orange_paint_button"
        android:visibility="invisible"
        android:enabled="false"
        android:layout_alignTop="@+id/yellow_paint_button"
        android:layout_toRightOf="@+id/yellow_paint_button"
        android:layout_toEndOf="@+id/yellow_paint_button"
        android:layout_marginLeft="@dimen/paint_button_horizontal_margin"
        android:layout_marginStart="@dimen/paint_button_horizontal_margin" />

    <Button
        android:layout_width="@dimen/paint_button_height"
        android:layout_height="@dimen/paint_button_width"
        android:background="@drawable/paint_buttonshape_brown"
        android:id="@+id/brown_paint_button"
        android:visibility="invisible"
        android:enabled="false"
        android:layout_alignTop="@+id/green_paint_button"
        android:layout_alignLeft="@+id/yellow_paint_button"
        android:layout_alignStart="@+id/yellow_paint_button" />

    <Button
        android:layout_width="@dimen/paint_button_height"
        android:layout_height="@dimen/paint_button_width"
        android:background="@drawable/paint_buttonshape_white"
        android:id="@+id/white_paint_button"
        android:layout_alignTop="@+id/brown_paint_button"
        android:layout_alignLeft="@+id/orange_paint_button"
        android:layout_alignStart="@+id/orange_paint_button"
        android:visibility="invisible"
        android:enabled="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/note_title_hint" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionEditText"
        android:hint="@string/note_description_hint"
        android:layout_below="@+id/titleEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/titleEditText"
        android:layout_alignEnd="@+id/titleEditText" />


</RelativeLayout>
